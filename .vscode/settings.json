{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.exclude": {
    "**/.git": true,
    "**/.cache": true,
    "**/*.scss.d.ts": true,
    "**/artifacts": true,
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/storybook-static": true,
    "**/tmp": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "spellright.language": ["en"],
  "spellright.documentTypes": ["markdown"]
}
