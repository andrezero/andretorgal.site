    "mdast-util-to-string": "^1.0.5",
    "node-sass": "^4.12.0",
    "postcss-preset-env": "^6.6.0",
    "postcss-scss": "^2.0.0",
    "postcss-utilities": "^0.8.1",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-router-dom": "^5.0.0",
    "react-static": "7.0.9",
    "react-static-plugin-react-router": "^7.0.9",
    "react-static-plugin-sitemap": "^7.0.9",
    "react-static-plugin-source-filesystem": "^7.0.9",
    "react-static-plugin-typescript": "^7.0.9",
    "rehype-autolink-headings": "^2.0.4",
    "rehype-highlight": "^2.2.1",
    "rehype-parse": "^6.0.0",
    "rehype-raw": "^4.0.0",
    "rehype-react": "^3.1.0",
    "rehype-slug": "^2.0.2",
    "remark": "^10.0.1",
