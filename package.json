{
  "name": "andretorgal.com",
  "private": true,
  "scripts": {
    "start": "node -r ts-node/register node_modules/.bin/react-static start",
    "clean": "find . -name '*.scss.d.ts' -type f -delete && rm -rf artifacts/ dist/ tmp/",
    "lint": "npm run lint-style && npm run lint-es && npm run lint-ts",
    "lint-style": "stylelint 'src/**/*.scss' --syntax scss --cache --cache-location ./tmp/stylelint.cache",
    "lint-es": "eslint --ext .js .react-static/ .webpack/ *.js --cache --cache-location ./tmp/eslint.cache",
    "lint-ts": "tsc --noEmit && tslint -p tsconfig.json --exclude '**/*.d.ts'",
    "lint-fix": "npm run lint-style -- --fix && npm run lint-es -- --fix && npm run lint-ts -- --fix ",
    "stage": "export BUILD_STAGE=stage && node -r ts-node/register node_modules/.bin/react-static build --staging",
    "build": "export BUILD_STAGE=prod && node -r ts-node/register node_modules/.bin/react-static build",
    "analyze": "export BUILD_STAGE=prod && node -r ts-node/register node_modules/.bin/react-static build --analyze",
    "serve": "serve dist -p 3000",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "chokidar": "^2.1.6",
    "css-loader": "^2.1.1",
    "dayjs": "^1.8.14",
